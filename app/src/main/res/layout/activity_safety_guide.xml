<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainSafetyGuide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SafetyGuideActivity"
    android:background="#5eb5c8">

    <!-- Title TextView at the top -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Safety Guide"
        android:fontFamily="@font/oswaldbold"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="16dp"/>

    <!-- ScrollView to contain the tips -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleTextView"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <!-- Dynamic content will be added here -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
