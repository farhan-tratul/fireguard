<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#FFE2A8"
    >
        <LinearLayout
            android:id="@+id/TemptMeter"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/bg_view">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="Dashboard"
                android:textColor="#171716"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/temparature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25  Â°C"
                android:textColor="#040404"

                android:layout_gravity="center_horizontal"
                android:textSize="20sp">

            </TextView>


        </LinearLayout>

    <TextView
        android:id="@+id/st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TemptMeter"
         android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Statistics"
        android:padding="5dp"
        android:textColor="#171716"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/st"
        android:orientation="vertical">


        <!-- Gas Meter Card -->
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/GasMeter"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neumorph_backgroundColor="#FBB96A"
            app:neumorph_shadowElevation="0dp"
            >


            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/Donut_Gas_Progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:donut_progress="30"
                app:donut_text_color="@color/Black"
                app:donut_finished_color="@color/colorTitleBold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gas level"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
              android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"

           />

        </soup.neumorphism.NeumorphCardView>

        <!-- Humidity Meter Card View -->
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/HumidityMeter"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="match_parent"
            app:neumorph_shadowElevation="0dp"
            android:layout_height="wrap_content"
            app:neumorph_backgroundColor="#FBB96A"

            >




            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/Donut_Humidity_Progress"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                app:donut_progress="25"
                app:donut_text_color="@color/Black"
                app:donut_finished_color="@color/colorTitleBold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:text="Humidity level"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="100dp"/>
        </soup.neumorphism.NeumorphCardView>

    </LinearLayout>




</RelativeLayout>

