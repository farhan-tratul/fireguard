<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainAboutUs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:background="#5eb5c8">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="About Us"
        android:fontFamily="@font/oswaldbold"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="16dp"/>
<!-- Content Layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/titleTextView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Team Member 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/curve_baground"
            >

            <!-- Member Image -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/member1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <!-- Member Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Member Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Azad"
                    android:textSize="28sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <!-- Member Role -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lead Developer"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />

                <!-- Member Bio -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce condimentum nisi eu felis convallis."
                    android:textSize="14sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/feed_bg"
            android:layout_marginVertical="16dp" />

        <!-- Team Member 2 (Similar layout as above) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/curve_baground">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/member3"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farhan "
                    android:textSize="28sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UX Designer"
                    android:textSize="14sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce condimentum nisi eu felis convallis."
                    android:textSize="14sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/feed_bg"
            android:layout_marginVertical="16dp" />
        <!-- Team Member 3  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/curve_baground">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/member4"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arifin Zaman"
                    android:textSize="28sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UX Designer"
                    android:textSize="14sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce condimentum nisi eu felis convallis."
                    android:textSize="14sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </LinearLayout>
        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/feed_bg"
            android:layout_marginVertical="16dp" />
        <!-- Team Member 4  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@drawable/curve_baground">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/member2"
                android:scaleType="centerCrop"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tandra"
                    android:textSize="28sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UX Designer"
                    android:textSize="14sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce condimentum nisi eu felis convallis."
                    android:textSize="14sp"
                    android:fontFamily="@font/oswaldbold"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
