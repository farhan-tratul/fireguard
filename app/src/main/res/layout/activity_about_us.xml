<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainAboutUs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5eb5c8"
    tools:context=".AboutUsActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="About FireGuard"
        android:fontFamily="@font/oswaldbold"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Concept Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/concept"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"/>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Concept"
                            android:textSize="24sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <!-- Summary -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fireguard is an IOT based android application for monitoring kitchen safety and alerting users."
                            android:textSize="16sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Objectives Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/objectives"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"/>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Objectives"
                            android:textSize="24sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <!-- Summary -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Gas Leak Detection: Sensitive detection system for natural gas or LPG. - Fire Detection: Integrated fire detection capabilities. - Remote Monitoring: Real-time alerts and monitoring. - Automation: Automated actions for safety. - User Awareness: Educational materials. - Simplified Installation: Easy setup."
                            android:textSize="16sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Features Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/features"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"/>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Features"
                            android:textSize="24sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <!-- Summary -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Dashboard for monitoring. - Notification alerts. - AI for safety checks. - Emergency contacts. - Safety Guide."
                            android:textSize="16sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Limitations Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/limitations"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"/>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Limitations"
                            android:textSize="24sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <!-- Summary -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Connectivity dependency. - Sensor accuracy. - Battery life. - Scalability. - UI complexity."
                            android:textSize="16sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Future Work Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/future_work"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"/>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Future Work"
                            android:textSize="24sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:textStyle="bold"/>

                        <!-- Summary -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="- Enhanced UI. - Expanded hardware. - Offline functionality. - Advanced analytics. - Smart home integration."
                            android:textSize="16sp"
                            android:fontFamily="@font/oswaldbold"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
